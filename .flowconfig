[options]
esproposal.decorators=ignore
esproposal.export_star_as=enable

module.name_mapper.extension='scss' -> '<PROJECT_ROOT>/flow/css-stub-interface.js'
module.name_mapper='.*\.\(jpeg\|jpg\|gif\|pdf\|path\|md\)$' -> '<PROJECT_ROOT>/flow/raw-stub-interface.js'

module.ignore_non_literal_requires=true

suppress_comment=\\(.\\|\n\\)*\\$FlowIgnore
suppress_comment=\\(.\\|\n\\)*\\$NeedFixTypes
suppress_comment=\\(.\\|\n\\)*\\$FlowRelaxItIsATest

module.name_mapper='@vtb/services/i18n' -> '<PROJECT_ROOT>/node_modules/@vtb/services/src/i18n'
module.name_mapper='@vtb/services/request' -> '<PROJECT_ROOT>/node_modules/@vtb/services/src/request'
module.name_mapper='@vtb/services/redux-actions' -> '<PROJECT_ROOT>/node_modules/@vtb/services/src/redux-actions'
;

[ignore]
<PROJECT_ROOT>/node_modules/[^@]
;<PROJECT_ROOT>/node_modules/@storybook
;<PROJECT_ROOT>/node_modules/@babel
;<PROJECT_ROOT>/node_modules/@vtb/fetch
;<PROJECT_ROOT>/node_modules/@vtb/bem-helper
;<PROJECT_ROOT>/node_modules/.*

.*stats.json$

[libs]
node_modules/@vtb/build-configs/flow-typed/npm/
.doc-gen/stub/
